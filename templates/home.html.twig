{% extends 'base.html.twig' %}

{% block body %}
    <section id="backgroundHome">
        <div id="tricksCatch">
            <p id="line1">ALL THE TRICKS </p>
            <p id="line2">you need to know.</p>
        </div>
    </section>
    <section id="tricksList">
        <div class="container-fluid">
            <div class="row">
                {% for tricks in tricks %}
                <div class="col-lg-3">
                    <div class="card">
                        <img class="card-img-top" src="https://img.redbull.com/images/c_crop,w_1920,h_960,x_0,y_120,f_auto,q_auto/c_scale,w_1200/redbullcom/2021/2/9/lo3b9oljjxcp3mlt2xtd/steep-meilleurs-jeux-video-snowboard" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ tricks.name }}</h5>
                            <div id="tricksListButtons">
                                <a href="#"><img src="../img/icons8-edit-24.png"></a>
                                <a href="#"><img src="../img/icons8-trash-can-24.png"></a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}